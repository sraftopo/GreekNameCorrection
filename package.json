{
    "name": "greek-name-correction",
    "version": "2.2.2",
    "description": "A zero-dependency Node.js library for correcting and formatting Greek names with transliteration, genitive conversion, and advanced features",
    "main": "src/index.js",
    "types": "index.d.ts",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "keywords": [
        "greek",
        "names",
        "correction",
        "formatting",
        "validation",
        "normalization",
        "transliteration",
        "greeklish",
        "genitive",
        "greek-language",
        "katharevousa"
    ],
    "author": "Stavros",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sraftopo/greek-name-correction.git"
    },
    "bugs": {
        "url": "https://github.com/sraftopo/greek-name-correction/issues"
    },
    "homepage": "https://github.com/sraftopo/greek-name-correction#readme",
    "engines": {
        "node": ">=12.0.0"
    },
    "bin": {
        "greek-name-correction": "bin/greek-name-correction.js"
    },
    "files": [
        "src/",
        "bin/",
        "index.js",
        "index.d.ts",
        "README.md",
        "LICENSE"
    ],
    "devDependencies": {
        "jest": "^29.7.0"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "json"
        ],
        "coveragePathIgnorePatterns": [
            "node_modules",
            "test"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        }
    }
}
